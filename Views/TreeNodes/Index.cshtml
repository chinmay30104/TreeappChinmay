@model IEnumerable<TreeappChinmay.Models.TreeNode>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NodeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentNode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NodeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentNode.NodeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NodeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NodeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NodeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
